{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Static Web App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/swa",
      "args": [
        "start",
        "src",
        "--api-location",
        "src/api",
        "--host",
        "127.0.0.1",
        "--port",
        "4280"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "hidden": false,
        "group": "SWA",
        "order": 1
      }
    },
    {
      "name": "Attach to .NET Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "presentation": {
        "hidden": false,
        "group": "API",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": ["Start Static Web App"],
      "presentation": {
        "hidden": false,
        "group": "Full Stack",
        "order": 1
      }
    }
  ]
}
