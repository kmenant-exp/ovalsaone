{
  "name": "vanilla-basic",
  "version": "1.0.0",
  "scripts": {
    "dev:pages": "npm run build && wrangler pages dev _site --port 8788",
    "build": "npx @11ty/eleventy --input=./src",
    "minify:css": "postcss _site/css-bundle.css --use cssnano --replace --no-map",
    "minify:js": "terser _site/bundle.js --compress drop_console=true --mangle --output _site/bundle.js",
    "minify": "npm run minify:css && npm run minify:js",
    "build:prod": "npm run build && npm run minify",
    "deploy:pages": "npm run build:prod && wrangler pages deploy _site --project-name ovalsaone",
    "db:migrate": "wrangler d1 migrations apply ovalsaonedb --remote",
    "db:migrate:local": "wrangler d1 migrations apply ovalsaonedb --local"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.1",
    "@playwright/test": "^1.58.1",
    "cssnano": "^6.0.1",
    "terser": "^5.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
    "@fullhuman/postcss-purgecss": "^8.0.0",
    "baseline-browser-mapping": "^2.9.19",
    "typescript": "^5.9.3",
    "wrangler": "^4.62.0"
  },
  "type": "module"
}
