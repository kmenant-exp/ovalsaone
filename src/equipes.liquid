<!-- Hero Section -->
<section class="page-hero">
    <div class="container">
        <h1>Nos Équipes</h1>
        <p>Découvrez nos différentes catégories et leurs entraîneurs</p>
    </div>
</section>

<!-- Section Catégories -->
<section class="categories section intro">
    <div class="container">
        <div class="categories-grid" id="categories-grid">
            <!-- Les catégories seront chargées dynamiquement depuis JSON -->
            {% for categorie in categories %}
                <div class="equipe-card fade-in-up">
                    <div class="equipe-header">
                        <h3 class="equipe-title">{{ categorie.nom  }}</h3>
                        <div class="equipe-badges">
                            <span class="equipe-age">{{ categorie.age_min }}-{{ categorie.age_max }} ans</span>
                            <span class="equipe-effectif">{{ categorie.effectif }} joueurs</span>
                        </div>
                    </div>
                    <div class="equipe-content">
                        <div class="equipe-info">
                            <p><strong><i class="fas fa-user-tie"></i> Entraîneur :</strong>{{ categorie.entraineur.nom }}</p>
                            <p><strong><i class="fas fa-medal"></i> Expérience :</strong>{{ categorie.entraineur.experience }}</p>
                        </div>
                        <div class="equipe-description">
                            <p>{{ categorie.description  }}</p>
                        </div>
                        <div class="equipe-planning">
                            <h4><i class="fas fa-calendar-alt"></i> Planning d'entraînement</h4>
                            <ul>
                                {% for seance in categorie.planning %}
                                    <li>
                                        <strong>{{ seance.jour }}</strong>
                                        <span>{{ seance.heure }}</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>  
            {% endfor %}
        </div>
    </div>
</section>