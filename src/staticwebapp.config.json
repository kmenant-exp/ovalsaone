{
  "$schema": "https://aka.ms/azure/static-web-apps/schema",
  "routes": [
    {
      "route": "/src/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/src/api/*", "/*.{css,scss,sass,js,ts,json,png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot}"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".css": "text/css",
    ".js": "application/javascript",
    ".json": "application/json",
    ".svg": "image/svg+xml"
  },
  "globalHeaders": {
    "cache-control": "no-cache"
  }
}
